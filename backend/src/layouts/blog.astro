---
import Head from "../components/head.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

// Components
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <div class="main">
      <slot />
    </div>
    <Footer />
  </body><style lang="scss">
    @use "sass:list";
    @use "sass:string";
    @use "sass:meta";
    @use "sass:map";

    @use "../styles/app.scss" as app;
    @use "@nulllogic/scssleon/scss/mixins.scss" as mixins;
    @use "@nulllogic/scssleon/scss/functions.scss" as functions;

    $main-section: (
      margin: 0 0 15px 0,
      padding: 0 15px,
      responsive: (
        md: (
          padding: 0,
        ),
      ),
    );

    @include mixins.generate-component(
      $main-section,
      "main",
      app.$config,
      app.$theme
    );
  </style>
</html>
