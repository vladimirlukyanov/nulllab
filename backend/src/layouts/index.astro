---
import Head from "~/components/head/index.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

// Components
import Header from "~/components/header/index.astro";
import Footer from "~/components/footer/index.astro";
const { title, description, lang = 'en', noindex, nofollow } = Astro.props;

---

<!doctype html>
<html lang={lang} data-theme="dark">
  <head>
    <Head title={SITE_TITLE + ' | ' + SITE_DESCRIPTION} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="main">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style lang="scss">
  @use "sass:list";
  @use "sass:string";
  @use "sass:meta";
  @use "sass:map";

  @use "~/styles/app.scss" as app;

  @use "@nulllogic/scssleon/scss/mixins.scss" as mixins;
  @use "@nulllogic/scssleon/scss/functions.scss" as functions;

  $main-section: (
      margin: 0 0 15px 0,
      padding-inline: var(global(--padding-inline)),
  );

  @include mixins.generate-component(
          $main-section,
          "main",
          app.$config,
          app.$theme
  );
</style>

