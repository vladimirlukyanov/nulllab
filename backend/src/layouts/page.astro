---
import Head from "~/components/head.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

// Components
import Header from "~/components/header/index.astro";
import Footer from "~/components/footer/index.astro";

const {title, description, published_date, updated_date, featured_image} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
      <Head
              title={title + ' | ' + SITE_TITLE}
              description={description}
              featured_image={featured_image}
              published_date={published_date}
              updated_date={updated_date}
      />
  </head>
  <body>
    <Header />
    <div class="container xxl">
      <div class="page">
        <slot />
      </div>
    </div>
    <Footer />
  </body><style lang="scss">
    @use "sass:list";
    @use "sass:string";
    @use "sass:meta";
    @use "sass:map";

    @use "../styles/app.scss" as app;
    @use "@nulllogic/scssleon/scss/mixins.scss" as mixins;
    @use "@nulllogic/scssleon/scss/functions.scss" as functions;

    $page-section: (
      margin: 25px 0,
      padding: 0 15px,
      responsive: (
        md: (
          padding: 0,
        ),
      ),
    );

    @include mixins.generate-component(
      $page-section,
      "page",
      app.$config,
      app.$theme
    );
  </style>
</html>
