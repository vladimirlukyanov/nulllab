---
import LayoutBlog from "../../layouts/blog.astro";

const allPosts = await Astro.glob("../../content/blog/**/*.mdx");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<LayoutBlog>
  {
    tags.map((tag) => (
      <p>
        <a href={`/tags/${tag}`}>{tag}</a>
      </p>
    ))
  }
</LayoutBlog>
