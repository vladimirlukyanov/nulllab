    @include meta.load-css(
        "../styles/scss/components/#{$component}",
      $with: (config: app.$config, theme: app.$theme)
    );
  }

  $post-section: (
    margin: 25px 0,
    subclasses: (
    ),
  );

  @include mixins.generate-component(
