---
import FormattedDate from '../../FormattedDate.astro'
import { Image } from 'astro:assets'
import { words_limit } from '~/utils/text'

const { posts } = Astro.props
const featured_post = posts.filter((post) => post.data.featured).at(0)
---
<section class="hot">
    <div class="container xxl">
        <div class="grid">
            <div class="one">
              {
                posts.slice(0, 2).map((post, index) => {
                  if (index === 0) {
                    return (
                            <div class="post">
                                <a href={`/${post.id.substring(5)}/`}
                                   class="link" title={post.data.title}>
                                    <Image
                                            class="image"
                                            width={370}
                                            src={post.data.image.url}
                                            alt={post.data.image.alt}
                                    />
                                    <span class="title">{post.data.title}</span>
                                    <p class="date">
                                        <FormattedDate
                                                date={post.data.published_date}/>
                                    </p>
                                </a>
                            </div>
                    )
                  } else {
                    return (
                            <div class="post">
                                <a href={`/${post.id.substring(5)}/`}
                                   class="link" title={post.data.title}>
                                    <span class="title">{post.data.title}</span>
                                    <span class="description">
                                                        {words_limit(
                                                          post.data.description,
                                                          30, {
                                                            appendEllipsis: true,
                                                          })}
                                                    </span>
                                    <p class="date">
                                        <FormattedDate
                                                date={post.data.published_date}/>
                                    </p>
                                </a>
                            </div>
                    )
                  }
                })
              }
            </div>
            <div class="two">
                <div class="featured">
                    <a href={`/${featured_post.id.substring(5)}/`} class="link"
                       title={featured_post.data.title}>
                            <span class="image">
                                <Image src={featured_post.data.image.url}
                                       alt={'11'} class="image"/>
                            </span>
                        <span class="bottom">
                                <span class="text">
                                    <span class="category">{featured_post.data.category}</span>
                                    <span class="title">{featured_post.data.title}</span>
                                    <span class="date">
                                        <FormattedDate
                                                date={featured_post.data.published_date}/>
                                    </span>
                                </span>
                            </span>
                    </a>
                </div>
            </div>
            <div class="three">
                <div class="grid">
                  {
                    posts.slice(2, 6).map((post) => {
                      return (
                              <a href={`/${post.id.substring(5)}/`} class="post"
                                 title={post.data.title}>
                                  <div class="left">
                                      <Image
                                              class="image"
                                              width={130}
                                              src={post.data.image.url}
                                              alt={post.data.image.alt}
                                      />
                                  </div>
                                  <div class="right">
                                      <span class="title">{post.data.title}</span>
                                    {false &&
                                            <span class="description">{words_limit(
                                              post.data.description, 10, {
                                                appendEllipsis: true,
                                              })}</span>
                                    }
                                      <span class="date">
                                                <FormattedDate
                                                        date={post.data.published_date}/>
                                            </span>
                                  </div>
                              </a>
                      )
                    })
                  }
                </div>
            </div>
        </div>
    </div>
</section>

<style lang="scss">
  @use "sass:list";
  @use "sass:string";
  @use "sass:meta";
  @use "sass:map";

  @use "~/styles/app.scss" as app;

  @use "~/styles/scss/mixins.scss" as mixins;
  @use "~/styles/scss/functions.scss" as functions;

  // --- hot section --- //


  $hot-news-section-grid-column-1: (
    order: 2,

    _subclasses: (
      '.post' : (
        display: block,
        width: 100%,
        /*grid-template-columns: 1fr,*/
        /*grid-auto-rows: auto,*/
        /*grid-gap: 0,*/
        margin: 0 0 10px 0,
        _subclasses: (
          /***/
          '.image' : (
            display: block,
            margin: 0 0 10px 0,
            border-radius: 0.5rem,
            box-shadow: string.unquote('rgba(0, 0, 0, 0) 0px 0px 0px 0px, rgba(0, 0, 0, 0) 0px 0px 0px 0px, rgba(0, 0, 0, 0) 0px 0px 0px 0px, rgba(0, 0, 0, 0) 0px 0px 0px 0px, rgba(0, 0, 0, 0.1) 0px 4px 6px -1px, rgba(0, 0, 0, 0.1) 0px 2px 4px -2px'),
          ),
          '.title': (
            font-size: 1.25rem,
            display: block,
            margin: 0 0 10px 0,
            font-weight: 500,
          ),
          '.description': (
            display: block,
            margin: 0 0 10px 0,
          ),
          '.date' : (
            font-size: 0.825rem,
            color: #959595,
          )
        )
      )
    ),
    _responsive: (
      md: (
        order: 1,
      ),
    ),
  );

  $hot-news-section-grid-column-2: (
    order: 2,
    _subclasses: (
      /***/
      '.featured' : (
        /***/
        _subclasses: (
          /***/
          '.link' : (
            display: block,
            _subclasses: (
              /***/
              '.image' : (
                position: relative,
                display: block,
                border-radius: 0.5rem,
                box-shadow: string.unquote('rgba(0, 0, 0, 0) 0px 0px 0px 0px, rgba(0, 0, 0, 0) 0px 0px 0px 0px, rgba(0, 0, 0, 0) 0px 0px 0px 0px, rgba(0, 0, 0, 0) 0px 0px 0px 0px, rgba(0, 0, 0, 0.1) 0px 4px 6px -1px, rgba(0, 0, 0, 0.1) 0px 2px 4px -2px'),
                _subclasses: (
                  '.shadow' : (
                    position: absolute,
                    display: block,
                    left: 0,
                    top: 0,
                    width: 100%,
                    height: 100%,
                    background-image: string.unquote('linear-gradient(-180deg, rgba(0, 0, 0, 0.01) 0%, rgba(0, 0, 0, 0.62) 62%, rgba(0, 0, 0, 0.82) 82%, rgba(0, 0, 0, 0.86) 86%)'),
                  ),
                )
              ),
              '.text' : (
                /*position: absolute,*/
                /*bottom: 15px,*/
                /*left: 15px,*/
                width: 100%,
                display: flex,
                flex-direction: column,
                gap: 10px,
                /***/
                _subclasses: (
                  '.category' : (
                    font-size: 0.825rem,
                    color: #8c602e,
                    font-weight: bold,
                    text-transform: capitalize,
                  ),
                  '.title' : (
                    font-size: 1.5rem,
                  ),
                  '.date' : (
                    font-size: 0.825rem,
                    color: #959595,
                  )
                )
              ),
            ),
          ),
        ),
      ),
    ),
  );

  $hot-news-section-grid-column-3: (
    grid-area: string.unquote('2 / 1 / 3 / 3'),
    order: 3,
    _responsive: (
      lg: (
        grid-area: auto,
      ),
    ),
    /***/
    _subclasses: (
      /***/
      '.grid' : (
        display: grid,
        grid-template-columns: 1fr 1fr,
        _responsive: (
          lg: (
            grid-template-columns: 1fr,
          ),
        ),
        _subclasses: (
          '.post' : (
            display: grid,
            width: 100%,
            grid-template-columns: 1fr,
            grid-auto-rows: auto,
            grid-gap: 0,
            margin: 0 0 10px 0,
            /***/
            _responsive: (
              md: (
                grid-template-columns: auto 1.5fr,
                grid-gap: 1rem,
              ),
              lg: (
                grid-template-columns: minmax(100px, 130px) auto,
                grid-gap: 1rem,
              ),
            ),
            /***/
            _subclasses: (
              '.title': (
                display: block,
                margin: 0 0 10px 0,
              ),
              '.image' : (
                border-radius: 0.5rem,
                box-shadow: string.unquote('rgba(0, 0, 0, 0) 0px 0px 0px 0px, rgba(0, 0, 0, 0) 0px 0px 0px 0px, rgba(0, 0, 0, 0) 0px 0px 0px 0px, rgba(0, 0, 0, 0) 0px 0px 0px 0px, rgba(0, 0, 0, 0.1) 0px 4px 6px -1px, rgba(0, 0, 0, 0.1) 0px 2px 4px -2px'),
              ),
              '.date' : (
                font-size: 0.825rem,
                color: #959595,
              )
            )
          )
        ),
      ),
    )
  );

  $hot-section: (
    margin: 25px 0,
    _subclasses: (
      /***/
      '.grid': (
        /***/
        display: grid,
        width: 100%,
        grid-template-columns: 1fr 1fr,
        grid-auto-rows: auto,
        grid-template-rows: 1fr,
        grid-gap: 1rem,
        /***/
        _responsive: (
          md : (
            grid-template-columns: 1fr 1fr,
            grid-template-rows: 1fr,
          ),
          lg : (
            grid-template-columns: minmax(200px, 277px) 1fr minmax(200px, 277px)
          ),
          xl: (
            grid-template-columns: minmax(200px, 277px) 1fr minmax(200px, 277px)
          )
        ),
        /***/
        _subclasses: (
          /***/
          '.one' : $hot-news-section-grid-column-1,
          '.two' : $hot-news-section-grid-column-2,
          '.three' : $hot-news-section-grid-column-3,
        ),
      ),
    )
  );

  @include mixins.generate-component(
      $hot-section,
      "hot",
      app.$config,
      app.$theme
  );

</style>
